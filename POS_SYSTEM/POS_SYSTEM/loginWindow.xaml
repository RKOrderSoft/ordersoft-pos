<Window x:Class="loginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:POS_SYSTEM"
        mc:Ignorable="d"
        Title="Ordersoft POS Login" Height="450" Width="500" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid>
        <Label Name="lblTitle" Content="OrderSoft Client Login" Margin="67,26,0,0" VerticalAlignment="Top" FontFamily="Circular Std Medium" FontSize="36" Height="73" Width="369" HorizontalAlignment="Left"/>

        <TextBox Name="txtUser" VerticalContentAlignment="Center" HorizontalAlignment="Left" Height="54" Margin="110,138,0,0" TextWrapping="Wrap" Text="JasonXiao" VerticalAlignment="Top" Width="280"  FontSize="20"/>
        <Label Name="lblUser" Content="Username" HorizontalAlignment="Left" Margin="110,104,0,0" VerticalAlignment="Top" FontFamily="Circular Std Medium" FontSize="20"/>

        <PasswordBox Name="txtPassword" VerticalContentAlignment="Center" HorizontalAlignment="Left" Height="54" Margin="110,231,0,0" VerticalAlignment="Top" Width="280" Password="glasses"  FontSize="20"/>
        <Label Name="lblPassword" Content="Password" HorizontalAlignment="Left" Margin="110,197,0,0" VerticalAlignment="Top" FontFamily="Circular Std Medium" FontSize="20"/>

        <Button Name="btnLogin" Content="Log in" HorizontalAlignment="Left" Margin="110,301,0,0" VerticalAlignment="Top" Width="280" Height="75" FontSize="20"/>
        <Button Name="btnHelp"  Content="Help" HorizontalAlignment="Right" Margin="0,10,10,0" VerticalAlignment="Top" Width="48" Click="Button_Click" Height="48"  FontSize="12" Background="#FFDDDDDD"/>
        <Button x:Name="btnClose" Content="Close" HorizontalAlignment="Right" Margin="0,104,12,0" VerticalAlignment="Top" Width="75" Height="75" FontSize="20" Visibility="Hidden"/>
    </Grid>
</Window>
