<Window x:Class="orderInfoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:POS_SYSTEM"
        mc:Ignorable="d"
        Title="orderInfoWindow" Height="450" Width="800">
    <Grid>
        <TextBox Name="txtboxAmtPaid" HorizontalAlignment="Right" Height="52" Margin="0,34,59,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="273"/>

        <Label Content="$" HorizontalAlignment="Left" Margin="423,34,0,0" VerticalAlignment="Top" Height="52" Width="32"/>

        <Button Name="btn1" Content="1" HorizontalAlignment="Left" Margin="460,103,0,0" VerticalAlignment="Top" Width="78" Height="75"/>
        <Button x:Name="btn2" Content="2" HorizontalAlignment="Left" Margin="538,103,0,0" VerticalAlignment="Top" Width="78" Height="75"/>
        <Button x:Name="btn3" Content="3" HorizontalAlignment="Left" Margin="616,103,0,0" VerticalAlignment="Top" Width="78" Height="75"/>
        <Button x:Name="btn4" Content="4" HorizontalAlignment="Left" Margin="460,178,0,0" VerticalAlignment="Top" Width="78" Height="75"/>
        <Button x:Name="btn5" Content="5" HorizontalAlignment="Left" Margin="538,178,0,0" VerticalAlignment="Top" Width="78" Height="75"/>
        <Button x:Name="btn6" Content="6" HorizontalAlignment="Left" Margin="616,178,0,0" VerticalAlignment="Top" Width="78" Height="75"/>
        <Button x:Name="btn7" Content="7" HorizontalAlignment="Left" Margin="460,253,0,0" VerticalAlignment="Top" Width="78" Height="75"/>
        <Button x:Name="btn8" Content="8" HorizontalAlignment="Left" Margin="538,253,0,0" VerticalAlignment="Top" Width="78" Height="75"/>
        <Button x:Name="btn9" Content="9" HorizontalAlignment="Left" Margin="616,253,0,0" VerticalAlignment="Top" Width="78" Height="75"/>
        <Button x:Name="btn0" Content="0" HorizontalAlignment="Left" Margin="538,328,0,0" VerticalAlignment="Top" Width="78" Height="75"/>
        <Button x:Name="btnPay" Content="PAY" HorizontalAlignment="Left" Margin="616,328,0,0" VerticalAlignment="Top" Width="78" Height="75"/>
        <Button x:Name="btnCancel" Content="Cancel" HorizontalAlignment="Left" Margin="460,328,0,0" VerticalAlignment="Top" Width="78" Height="75"/>

        <Label Name="lblOrderId" Content="Order ID: " HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <Label Name="lblTableNumber" Content="Table Number:" HorizontalAlignment="Left" Margin="10,60,0,0" VerticalAlignment="Top"/>
        <Label Name="lblServerID" Content="Server ID:" HorizontalAlignment="Left" Margin="10,34,0,0" VerticalAlignment="Top"/>
        <Label Name="lblNotes" Content="Notes:" HorizontalAlignment="Left" Margin="10,0,0,36" VerticalAlignment="Bottom"/>
        <Label Name="lblTax" Content="Tax:" HorizontalAlignment="Left" Margin="10,0,0,10" VerticalAlignment="Bottom"/>
        <Label Name="lblSubtotal" Content="Subtotal:" HorizontalAlignment="Left" Margin="93,0,0,10" VerticalAlignment="Bottom"/>
        <Label Name="lblTotal" Content="Total:" HorizontalAlignment="Left" Margin="207,0,0,10" VerticalAlignment="Bottom"/>

        <ListView Name="lvDishes" HorizontalAlignment="Left" Height="203" Margin="22,113,0,0" VerticalAlignment="Top" Width="404">
            <ListView.View>
                <GridView>
                    <GridViewColumn Width="130" DisplayMemberBinding="{Binding name}">Dish Name</GridViewColumn>
                    <GridViewColumn Width="130" DisplayMemberBinding="{Binding size}">Size</GridViewColumn>
                    <GridViewColumn Width="130" DisplayMemberBinding="{Binding totalPrice}">Price</GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>
        <Label Name="lblErrorMsg" Content="Please enter a value higher than the total" HorizontalAlignment="Left" Margin="455,81,0,0" VerticalAlignment="Top" Width="252" HorizontalContentAlignment="Right" Background="{x:Null}" Foreground="Red" Visibility="Hidden"/>

    </Grid>
</Window>
