<Window x:Class="posWindowHelp"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:POS_SYSTEM"
        mc:Ignorable="d"
        Title="Ordersoft POS Help" Height="200" Width="450" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" ShowInTaskbar="False">
    <Grid>
        <Label Content="Select an order by clicking on it, then click&#xD;&#xA;open order to view the order in more&#xD;&#xA;detail and pay. Or, manually input a table&#xD;&#xA;number and click OPEN." FontSize="20" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Height="136" Width="380" RenderTransformOrigin="0.5,0.5">
            <Label.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform AngleY="-0.342"/>
                    <RotateTransform/>
                    <TranslateTransform Y="-0.916"/>
                </TransformGroup>
            </Label.RenderTransform>
        </Label>
        <Button Name="btnClose"  Content="Close" HorizontalAlignment="Right" Margin="0,0,10,10" VerticalAlignment="Bottom" Width="188" Height="50" FontSize="20"/>
    </Grid>
</Window>
